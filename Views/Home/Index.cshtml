    <div class="carousel-inner">
        <div class="carousel-item-active">
            <img src="~/Images/Albums/StopStaringAtTheShadows.jpg" class="d-block mx-auto" />
        </div>
        <div class="carousel-item">
            <img src="~/Images/Books/CleanCode.jpg" class="d-block mx-auto" />
        </div>
        <div class="carousel-item">
            <img src="~/Images/Movies/FearAndLoathing.jpg" class="d-block mx-auto" />
        </div>
